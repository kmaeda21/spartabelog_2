<div class="row">
  <div class="col-lg-12">

<p id="notice"><%= notice %></p>

<h1>Listing Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tel </th>
      <th>Address </th>
      <th>Homepage </th>
            <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.tel %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.homepage %></td>

        <td><%= link_to 'Show', restaurant, class: "btn btn-danger"%></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-danger" %></td>
        <td><%= link_to 'Destroy', restaurant, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-danger" %>

</div>
</div>
